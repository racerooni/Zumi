// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String @id
  name        String
  city        String
  phoneNumber String
  email       String
  type        String @default("Felhasználó")
}

model store {
  id        String     @id @default(uuid())
  name      String
  userId    String
  products  Products[] @relation("ProductToStore")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Products {
  id          String     @id @default(uuid())
  storeId     String
  store       store      @relation("ProductToStore", fields: [storeId], references: [id])
  label       String
  imageUrl    String
  price       Int
  description String
  category    String
  categories  Categories @relation("ProductCategories", fields: [category], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([storeId])
  @@index([category])
  @@map("Billboard")
}

model Categories {
  id       String     @id @default(uuid())
  name     String
  imageUrl String
  product  Products[] @relation("ProductCategories")
}

model Transactions {
  id        String   @id @default(uuid())
  currency  String
  amount    Decimal
  createdAt DateTime @default(now())
}
